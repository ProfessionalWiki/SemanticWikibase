<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="src/EntryPoints" />
        </ignoreFiles>
    </projectFiles>
	<extraFiles>
		<directory name="../../includes" />
		<directory name="../../vendor/wikibase" />
		<directory name="../../vendor/data-values" />
		<directory name="../../vendor/serialization" />
		<directory name="../SemanticMediaWiki/src" />
		<directory name="../SemanticMediaWiki/includes" />
		<directory name="../Wikibase/repo/includes" />
	</extraFiles>
	<issueHandlers>
		<UndefinedConstant errorLevel="suppress" />
	</issueHandlers>
</psalm>
